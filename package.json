{
	"name": "amethyst",
	"version": "1.0.0",
	"main": "dist/src/server.js",
	"scripts": {
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"build": "tsc && tspath -f",
		"prestart": "yarn build",
		"start": "node .",
		"pretest": "yarn build",
		"test": "mocha dist/tests/**/**/**/**/*.js --exit --timeout 10000",
		"watch": "nodemon",
		"justTest": "mocha dist/tests/**/**/**/**/*.js --exit --timeout 10000",
		"justStart": "node .",
		"pre-commit": "concurrently \"yarn tslint\" \"yarn test\"",
		"populateDatabase": "node -e \"require('./dist/tests/dummyData/populateDatabase').populateDatabase()\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn pre-commit"
		}
	},
	"dependencies": {
		"bcrypt": "^3.0.6",
		"body-parser": "^1.19.0",
		"connect-mongo": "^3.0.0",
		"cors": "^2.8.5",
		"dotenv": "^8.0.0",
		"express": "^4.17.0",
		"express-session": "^1.16.2",
		"express-validator": "^5.3.1",
		"helmet": "^3.20.0",
		"lodash": "^4.17.15",
		"lorem-ipsum": "^2.0.3",
		"mongoose": "^5.5.9",
		"morgan": "^1.9.1",
		"passport": "^0.4.0",
		"passport-facebook": "^3.0.0",
		"passport-local": "^1.0.0",
		"serialize-error": "^4.1.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/chai": "^4.1.7",
		"@types/chai-http": "^4.2.0",
		"@types/connect-mongo": "^0.0.42",
		"@types/cors": "^2.8.5",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.16.1",
		"@types/express-session": "^1.15.12",
		"@types/helmet": "^0.0.43",
		"@types/lodash": "^4.14.137",
		"@types/lorem-ipsum": "^1.0.2",
		"@types/mocha": "^5.2.6",
		"@types/mongodb": "^3.1.27",
		"@types/mongoose": "^5.5.6",
		"@types/morgan": "^1.7.35",
		"@types/node": "^12.0.2",
		"@types/passport": "^1.0.0",
		"@types/passport-facebook": "^2.1.9",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"concurrently": "^4.1.1",
		"husky": "^2.4.1",
		"mocha": "^6.1.4",
		"nodemon": "^1.19.1",
		"tslint": "^5.16.0",
		"tspath": "^1.3.7",
		"typescript": "^3.4.5"
	}
}
